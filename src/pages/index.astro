---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Personal Website - Tyler Bosford',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download Resume',
        href: '/Tyler_Bosford_MasterResume-2.pdf',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Course Projects', href: '#features' },
    ]}
    image={{ src: '~/assets/images/TylerBosford.JPG', alt: 'Tyler Bosford Headshot' }}
  >
  <Fragment slot="title">
    Tyler Bosford
    <span class="text-accent dark:text-white">
      Technical Project Manager Engineer & CS Student
    </span>
  </Fragment>


  <Fragment slot="subtitle">
    <span class="hidden sm:inline">
      Technical Project Manager and former USAF TACP with 10 years of operational project management experience.
      Currently completing a Computer Science post-baccalaureate focused on reverse engineering, systems design,
      and secure software development.
    </span>
    <span class="block mb-1 sm:hidden font-bold text-blue-600">
      Technical PM | USAF TACP | CS Student
    </span>
  </Fragment>

  </Hero>


  <!-- Features Widget *************** -->

  <Features
    id="features"

    title="Course Projects"
    subtitle="Selected coursework and projects showcasing software development, reverse engineering, and secure systems design."
    items={[
      {
        title: 'Stateless Firewall (C++)',
        description:
          "Implemented a stateless Layer 3 firewall using a Trie for IPv4 ACLs, including longest-prefix matching and integrated port/protocol controls for fast, precise rule enforcement.",
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Agile Web Application (Team Project)',
        description:
          "Developed a web application as part of a distributed Agile team, building frontend components with HTML, CSS, and JavaScript while contributing to sprint planning, reviews, and continuous delivery of incremental features.",
        icon: 'tabler:components',
      },
      {
        title: 'RSA (Python)',
        description:
          'Implemented full RSA encryption/decryption including key generation, Fast Modular Exponentiation, and message encoding. Built custom Euclidean algorithms for modular inverses and developed a brute-force RSA cracker to analyze key strength.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Custom UNIX Shell (C)',
        description:
          'Built a UNIX-style shell supporting command parsing, job control, background processing, pipes, and I/O redirection. Implemented signal handling and process tracking using a custom job list for PID and lifecycle management.',
        icon: 'tabler:rocket',
      },
      {
        title: 'CS Attack Lab (C & Assembly)',
        description:
          "Completed multi-phase memory exploitation lab, analyzing buffer overflows, format string bugs, and control-flow hijacking. Reversed binaries with GDB and crafted custom payloads to manipulate program execution.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Maze Game (C++ / Game Project)',
        description:
          'Developed a terminal-based maze game with pathfinding algorithms (BFS, DFS, A*) for enemy AI, procedural map generation, and player interactions. Implemented game mechanics including turn-based movement, secret challenges, and scoring system.',
        icon: 'tabler:bulb',
      },
    ]}
  />
</Layout>
